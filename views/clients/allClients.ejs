<div class="container my-5">
  <h2 class="mb-4 text-light">All Clients</h2>
  <div class="table-responsive">
    <table class="table table-bordered table-hover text-center align-middle table-dark">
      <thead class="table-success">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Phone Number</th>
          <th>Address</th>
          <th>Email</th>
          <th>Device</th>
          <th>Payment Method</th>
          <th>Payment Status</th>
        </tr>
      </thead>
      <tbody>
        <% if (clients.length === 0) { %>
          <tr><td colspan="8" class="text-center">No clients yet.</td></tr>
        <% } else { %>
          <% clients.forEach(client => { %>
            <tr>
              <td><%= client.id %></td>
              <td><%= client.name %></td>
              <td><%= client.phone %></td>
              <td><%= client.address %></td>
              <td><%= client.email %></td>
              <td><%= client.device %></td>
              <td><%= client.paymentMethod %></td>
              <td class="<%= client.paymentStatus === 'Paid' ? 'text-success' : 'text-danger' %>">
                <%= client.paymentStatus %>
              </td>
            </tr>
          <% }); %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
