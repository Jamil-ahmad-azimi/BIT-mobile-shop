<div class="container my-5">
  <h2 class="mb-4 text-dark">Add New Staff Member</h2>
  <form action="/newStaff" method="POST">
    <div class="row mb-3">
      <div class="col-md-2">
        <label for="staffId" class="form-label text-dark">Staff ID</label>
        <input type="text" class="form-control bg-dark text-white" id="staffId" name="id" required>
      </div>
      <div class="col-md-4">
        <label for="name" class="form-label text-dark">Name</label>
        <input type="text" class="form-control bg-dark text-white" id="name" name="name" required>
      </div>
      <div class="col-md-3">
        <label for="jobTitle" class="form-label text-dark">Job Title</label>
        <input type="text" class="form-control bg-dark text-white" id="jobTitle" name="jobTitle" required>
      </div>
      <div class="col-md-3">
        <label for="email" class="form-label text-dark">Email</label>
        <input type="email" class="form-control bg-dark text-white" id="email" name="email" required>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3">
        <label for="salary" class="form-label text-dark">Salary ($)</label>
        <input type="number" class="form-control bg-dark text-white" id="salary" name="salary" required>
      </div>
      <div class="col-md-3">
        <label for="phone" class="form-label text-dark">Phone Number</label>
        <input type="tel" class="form-control bg-dark text-white" id="phone" name="phone" required>
      </div>
      <div class="col-md-3">
        <label for="hireDate" class="form-label text-dark">Hire Date</label>
        <input type="date" class="form-control bg-dark text-white" id="hireDate" name="hireDate" required>
      </div>
      <div class="col-md-3">
        <label for="address" class="form-label text-dark">Address</label>
        <input type="text" class="form-control bg-dark text-white" id="address" name="address" required>
      </div>
    </div>

    <button type="submit" class="btn btn-success">Add Staff</button>
  </form>
</div>
