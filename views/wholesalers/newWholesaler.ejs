<div class="container my-5">
  <h2 class="mb-4 text-light">Add New Wholesaler</h2>
  <form action="/newWholesaler" method="POST">
    <div class="row mb-3">
      <div class="col-md-3">
        <label for="wholesalerId" class="form-label text-light">Wholesaler ID</label>
        <input type="text" class="form-control bg-dark text-white" id="wholesalerId" name="wholesalerId" required>
      </div>
      <div class="col-md-3">
        <label for="companyName" class="form-label text-light">Company Name</label>
        <input type="text" class="form-control bg-dark text-white" id="companyName" name="companyName" required>
      </div>
      <div class="col-md-3">
        <label for="contactPerson" class="form-label text-light">Contact Person</label>
        <input type="text" class="form-control bg-dark text-white" id="contactPerson" name="contactPerson" required>
      </div>
      <div class="col-md-3">
        <label for="phoneNumber" class="form-label text-light">Phone Number</label>
        <input type="tel" class="form-control bg-dark text-white" id="phoneNumber" name="phoneNumber" required>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-4">
        <label for="email" class="form-label text-light">Email</label>
        <input type="email" class="form-control bg-dark text-white" id="email" name="email">
      </div>
      <div class="col-md-4">
        <label for="address" class="form-label text-light">Address</label>
        <input type="text" class="form-control bg-dark text-white" id="address" name="address">
      </div>
      <div class="col-md-4">
        <label for="productsSupplied" class="form-label text-light">Products Supplied</label>
        <input type="text" class="form-control bg-dark text-white" id="productsSupplied" name="productsSupplied">
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-4">
        <label for="balance" class="form-label text-light">Outstanding Balance</label>
        <input type="number" class="form-control bg-dark text-white" id="balance" name="balance" step="0.01" required>
      </div>
      <div class="col-md-4">
        <label for="status" class="form-label text-light">Status</label>
        <select class="form-select bg-dark text-white" id="status" name="status" required>
          <option value="Active">Active</option>
          <option value="Inactive">Inactive</option>
        </select>
      </div>
      <div class="col-md-4">
        <label for="notes" class="form-label text-light">Notes</label>
        <input type="text" class="form-control bg-dark text-white" id="notes" name="notes">
      </div>
    </div>

    <button type="submit" class="btn btn-success">Add Wholesaler</button>
  </form>
</div>
